    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "justMyCode": false
        },
        {
            "name": "Main",
            "type": "python",
            "request": "launch",
            "program": "./src/aiotaskq/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Sample App",
            "type": "python",
            "request": "launch",
            "module": "tests.apps.simple_app",
            "args": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Test",
            "type": "python",
            "module": "coverage",
            "args": [
                "run",
                "-m",
                "pytest",
                "-vvv",
                "-s",
            ],
            "request": "launch",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Sample Worker (Simple App)",
            "type": "python",
            "request": "launch",
            "module": "aiotaskq",
            "args": [
                "worker",
                "tests.apps.simple_app"
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "Celery Worker (Django Sample App)",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "args": [
                "-A",
                "sample_app_django",
                "worker",
                "--concurrency",
                "4",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/tests/apps/sample_app_django/",
            "justMyCode": false
        },
        {
            "name": "AioTaskQ Worker (Django Sample App)",
            "type": "python",
            "request": "launch",
            "module": "aiotaskq",
            "args": [
                "worker",
                "sample_app_django",
                "--concurrency",
                "4",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/tests/apps/sample_app_django/",
            "justMyCode": false
        }
    ]
}
