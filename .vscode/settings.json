{
    "files.exclude": {
        "**/.git": true,
        "**/.venv": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.egg-info": true,
        "**/__pycache__": true,
        "**/.mypy_cache": true
    },
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.analysis.extraPaths": [
        "src/tests/",
        "src/sample_apps/"
    ],
    "python.defaultInterpreterPath": "../.venv/bin/python3"
}
